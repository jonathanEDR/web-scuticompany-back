# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas Connection (use MongoDB Atlas for production)
MONGODB_URI=your_mongodb_atlas_connection_string_here

# Base URL del backend (URL p√∫blica de tu backend en Render)
# Ejemplo: https://web-scuticompany-back.onrender.com
BASE_URL=https://your-backend-domain.com

# Clerk Authentication
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Role Management (MongoDB es la fuente de verdad para roles)
DEFAULT_SUPER_ADMIN_EMAIL=admin@scuti.com

# CORS Origin (Frontend URL - use your deployed frontend URL)
FRONTEND_URL=https://your-frontend-domain.com

# ============================================
# Email Configuration (Resend)
# ============================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=Scuti Company <noreply@scuti.com>
EMAIL_REPLY_TO=soporte@scuti.com

# System URLs
APP_URL=https://your-backend-domain.com
PORTAL_URL=https://your-frontend-domain.com

# For development (local):
# EMAIL_FROM=onboarding@resend.dev
# APP_URL=http://localhost:5000
# PORTAL_URL=http://localhost:3000

# ============================================
# Cloudinary (File Uploads)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
